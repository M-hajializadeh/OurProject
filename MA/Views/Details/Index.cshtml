@model MA.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Details Page";
    Layout = "_Layout";
    int number = 0;
}



<div class="row mt-2 ">
    <div class="col">
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4 p-2">
                    <a href="#"><img src="~/img/@Model.PictureUrl" class="card-img" alt="Responsive image"></a>
                </div>
                <div class="col-md-8 text-right">
                    <div class="card-body">
                        <h5 class="card-title">@Model.ProductName</h5>
                        <hr />
                        <p class="card-text">دسته بندی: <span>@Model.GroupName</span></p>
                        <p class="card-text">ویژگی‌های کالا</p>
                        @if (Model.Off > 0)
                        {
                            <p class="card-text">
                                قیمت مصرف کننده:
                                <span><strike>@Model.Price</strike></span><span class="badge badge-pill badge-danger">@Model.Off%</span>
                            </p>
                            var getOff = MA.Common.Off.CalculateOff(Model.Off, Model.Price);
                            var result = Model.Price - getOff;
                            <p class="card-text"><span><strong>@result</strong></span>تومان<span></span></p>
                        }
                        else
                        {
                            <p class="card-text"><span><strong>@Model.Price</strong></span>تومان<span></span></p>
                        }
                        <hr />
                        <a id="AddCart" onclick="AddCart(@number)" class="btn btn-danger">افزودن به سبد خرید</a>
                        <input type="hidden" id="productid_@number" value="@Model.ID" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row bg-danger mt-2 card ">
    <div class="row">
        <div class="col text-right">
            <span>محصولات مرتبط</span>
            <hr />
        </div>
    </div>
    <div class="row p-2">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col">
                <a href="#"><img src="~/img/image2.png" class="img-thumbnail" alt="Responsive image"></a>
            </div>
        }
    </div>
</div>


