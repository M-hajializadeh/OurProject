@model IEnumerable<MA.Models.Product>
@{
    ViewData["Title"] = "Details Page";
    Layout = "_Layout";
    int SellCount = Model.Count();
    int Bayaneh = 30;
    long totalPric = 0;
    long totalOff = 0;
    long totalProductOff = 0;
}
<div class="container text-right mt-3">

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-8">
            <div class="card card-body">

                <div class="row">
                    <div class="col-12 col-sm-12 col-lg-2">
                        <span>میزان پرداخت</span>
                        <hr />
                    </div>
                    <div class="col-12 col-sm-12 col-lg-4">
                        <input type="radio" name="Pric" checked="checked" />
                        <span>کل مبلغ را پرداخت میکنم</span>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-6">
                        <input type="radio" name="Pric" />
                        <span>@Bayaneh%</span>
                        <span>مبلغ سبد خرید را بیانه میدهم</span>
                    </div>

                </div>


                <div class="row mt-3">
                    <div class="col">
                        <span>شیوه پرداخت</span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <input type="radio" name="WayPay" checked="checked" />
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-credit-card-2-front" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M14 3H2a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1zM2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2z" />
                                <path d="M2 5.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1z" />
                                <path fill-rule="evenodd" d="M2 8.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z" />
                            </svg>
                        </span>
                        <span>پرداخت اینترنتی</span>
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
                                <circle cx="8" cy="4.5" r="1" />
                            </svg>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span>آنلاین با تمامی کارت‌های بانکی</span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <input type="radio" name="WayPay" />
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-post-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM4.5 3a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 2a.5.5 0 0 0-.5.5v8a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5v-8a.5.5 0 0 0-.5-.5h-7z" />
                            </svg>
                        </span>
                        <span>پرداخت در محل با کارت بانکی</span>
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z" />
                                <circle cx="8" cy="4.5" r="1" />

                            </svg>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span>پرداخت پس از دریافت سفارش با تمامی کارتهای بانکی</span>
                    </div>
                </div>
                <hr />
            </div>
        </div>

        @foreach (var item in Model)
        {
            totalPric += item.Price;
            uint offProduct = MA.Common.Off.CalculateOff(item.Off, item.Price);
            if (offProduct > 0)
            {
                decimal totalProductOff1 = Convert.ToDecimal(item.Price) - offProduct;
                totalProductOff = Convert.ToUInt32(totalProductOff1);
                totalOff += Convert.ToInt32(offProduct);
            }
        }

            <div class="col-12 col-sm-12 col-md-12 col-lg-4  p-2">
                <div class="card card-body ">
                    <div class="row">
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        قیمت کالاها
                                    </span>
                                    <span>
                                        (@SellCount)
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <span>
                                        تخفیف کالاها
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">

                        </div>
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        @totalPric
                                    </span>
                                    <span>
                                        تومان
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <span>
                                        @totalOff
                                    </span>
                                    <span>
                                        تومان
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        جمع
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">

                        </div>
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        @{ decimal result = totalPric - totalOff;}
                                        @result
                                    </span>
                                    <span>
                                        تومان
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        مبلغ قابل پرداخت
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">

                        </div>
                        <div class="col-5">
                            <div class="row">
                                <div class="col">
                                    <span>
                                        @result
                                    </span>
                                    <span>
                                        تومان
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row justify-content-center">
                        @if (true)
                        {
                            <a href="@Url.ActionLink("Sell","Payment")" class="btn btn-danger mt-1">پرداخت و ثبت نهایی سفارش</a>
                        }
                        else
                        {
                            <a href="@Url.ActionLink("Sell","Payment")" class="btn btn-danger mt-1">ثبت نهایی سفارش</a>
                        }

                    </div>
                </div>
            </div>



        </div>


</div>

