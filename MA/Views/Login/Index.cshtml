
@{
    ViewData["Title"] = "Login Page";
    Layout = "_CommonLayout";
}
<div class="content">
    <div class="form-container">
        <div class="form-card mt-5">
            <div class="row justify-content-center">
                <h1>
                    <span class="badge badge-secondary">MA</span>
                </h1>
            </div>
            <div class="row mt-5 text-right">
                <h3 class="">ورود / ثبت نام</h3>
            </div>
            <div class="row mt-2 text-right">
                <p class="">شماره موبایل یا پست الکترونیکی خود را وارد نمایید</p>
            </div>
            <div class="row">
                <div class="input-group flex-nowrap">
                    <input type="text" class="form-control ">
                </div>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="btn-group flex-nowrap">
                    <button type="button" class="btn btn-info p-4" asp-controller="Login" asp-action="Verify">ورود</button>
                </div>
            </div>
        </div>
    </div>
</div>
